<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.screens.home.HomeFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/myToolbar"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@color/black"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/gymBro"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/make_your_dreams_come_true"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.Toolbar>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvProgressContainer"
        android:layout_width="360dp"
        android:layout_height="190dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/welcome_card_gradient"
        android:elevation="14dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myToolbar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWelcomeBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:elevation="14dp"
        android:text="@string/welcome_back"
        android:textColor="@color/white"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="@+id/tvProgressContainer"
        app:layout_constraintTop_toTopOf="@+id/tvProgressContainer" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMotivation"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:elevation="14dp"
        android:text="@string/count_every_rep_conquer_your_limits"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/tvProgressContainer"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcomeBack" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWorkoutCountContainer"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/stat_background"
        android:elevation="14dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="@string/_0"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvProgressContainer"
        app:layout_constraintEnd_toEndOf="@+id/tvProgressContainer"
        app:layout_constraintStart_toStartOf="@+id/tvProgressContainer"
        app:layout_constraintTop_toBottomOf="@+id/tvMotivation" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:elevation="14dp"
        android:text="@string/workouts"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvWorkoutCountContainer"
        app:layout_constraintEnd_toEndOf="@+id/tvWorkoutCountContainer"
        app:layout_constraintStart_toStartOf="@+id/tvWorkoutCountContainer" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvProfileContainer"
        android:layout_width="360dp"
        android:layout_height="115dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/profile_gradient"
        android:elevation="14dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tvWorkoutContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProgressContainer" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivProfileLogo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/transparent"
        android:elevation="14sp"
        android:padding="14dp"
        android:src="@drawable/profile_icon"
        app:layout_constraintBottom_toBottomOf="@+id/tvProfileContainer"
        app:layout_constraintStart_toStartOf="@+id/tvProfileContainer"
        app:layout_constraintTop_toTopOf="@+id/tvProfileContainer" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:elevation="14sp"
        android:text="@string/profile"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivProfileLogo"
        app:layout_constraintTop_toTopOf="@+id/ivProfileLogo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvProfileDesc"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:elevation="14sp"
        android:text="@string/view_and_edit_your_personal_info"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivProfileLogo"
        app:layout_constraintStart_toEndOf="@+id/ivProfileLogo"
        app:layout_constraintTop_toBottomOf="@+id/tvProfile" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWorkoutContainer"
        android:layout_width="360dp"
        android:layout_height="115dp"
        android:background="@drawable/workout_gradient"
        android:elevation="14dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tvChatContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvProfileContainer" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivWorkoutLogo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/transparent"
        android:elevation="14sp"
        android:padding="14dp"
        android:src="@drawable/dumbbell"
        app:layout_constraintBottom_toBottomOf="@+id/tvWorkoutContainer"
        app:layout_constraintStart_toStartOf="@+id/tvWorkoutContainer"
        app:layout_constraintTop_toTopOf="@+id/tvWorkoutContainer" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:elevation="14sp"
        android:text="@string/workouts"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivWorkoutLogo"
        app:layout_constraintTop_toTopOf="@+id/ivWorkoutLogo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWorkoutDesc"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:elevation="14sp"
        android:text="@string/choose_difficulty_and_start_workouts"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivWorkoutLogo"
        app:layout_constraintStart_toEndOf="@+id/ivWorkoutLogo"
        app:layout_constraintTop_toBottomOf="@+id/tvWorkout" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvChatContainer"
        android:layout_width="360dp"
        android:layout_height="115dp"
        android:layout_marginBottom="55dp"
        android:background="@drawable/chat_gradient"
        android:elevation="14dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWorkoutContainer" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivChatLogo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/transparent"
        android:elevation="14sp"
        android:padding="14dp"
        android:src="@drawable/chat_icon"
        app:layout_constraintBottom_toBottomOf="@+id/tvChatContainer"
        app:layout_constraintStart_toStartOf="@+id/tvChatContainer"
        app:layout_constraintTop_toTopOf="@+id/tvChatContainer" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:elevation="14sp"
        android:text="@string/chat_with_gymBro"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivChatLogo"
        app:layout_constraintTop_toTopOf="@+id/ivChatLogo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvChatDesc"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:elevation="14sp"
        android:text="@string/get_fitness_advice_from_ai_assistant"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivChatLogo"
        app:layout_constraintStart_toEndOf="@+id/ivChatLogo"
        app:layout_constraintTop_toBottomOf="@+id/tvChat" />

</androidx.constraintlayout.widget.ConstraintLayout>